<div class="flex-column d-flex align-items-center justify-content-center" >
<h1>Sign Up</h1>
<% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
<div class="card shadow" style="width: 60rem;">
<div class="card-header color="#172044" ">
      <h2 class="text-center">Sign Up</h2>
    </div>
  <div class="card-body">
  <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :username, class:"mt-3" %><br/>
        <%= f.text_field :username, class:"mb-2 form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, class:"mt-3" %><br/>
        <%= f.password_field :password, class:"mb-2 form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
      </div>
      <% end %>
  </div>
</div>
<%= button_to "Log In", login_path, method: :get, class:"bg-secondary border-0 rounded-pill shadow p-3 m-3" %>
</div>