<div class="flex-column d-flex align-items-center justify-content-center" style="height:100vh;">
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <div class="d-flex">
    <div class="m-5" >
      <div class="card bg-light border-secondary shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Author's Details</h2>
          </div>
          <div>
            <h3>  Author ID: <%= @author.id %> </h3>
            <h3>  Name: <%= @author.author_name %> </h3>
            <h3>  Age: <%= @author.age %> </h3>
            <h3>  Gender: <%= @author.gender %> </h3>
            <h3>  Genres: <%= @author.books %> </h3>
            <h3>  Publisher: <%= @author.publisher %> </h3>
            <h3>  Total Number Of Books Published: <%= @author.number_of_books_published %> </h3>
          </div>
          <div class="d-flex">
            <%= button_to "Edit Author" , edit_author_path, method: :get ,class:"bg-secondary border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to "View all Authors", authors_path,method: :get ,class:"bg-secondary border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to "Delete Author", author_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>